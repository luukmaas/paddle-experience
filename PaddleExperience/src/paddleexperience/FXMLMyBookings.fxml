<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paddleexperience.FXMLControllerMyBookings">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <top>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
           <HBox prefWidth="200.0" spacing="300.0">
               <children>
                  <Label fx:id="welcomeLabel" text="Paddle Experience">
                    <font>
                      <Font size="32.0" />
                    </font>
                  </Label>       
        
               <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#goToHome" styleClass="customButton" text="Log out" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>

            <HBox prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#goToMain" styleClass="customButton" text="Back to booking" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="myBookingsTable" prefWidth="200.0" styleClass="myBookingsTable">
              <columns>
                <TableColumn editable="false" prefWidth="75.0" text="Day" />
                <TableColumn prefWidth="-1.0" text="Court" />
                <TableColumn prefWidth="-1.0" text="Time" />
                <TableColumn prefWidth="-1.0" text="Paid" />
                <TableColumn prefWidth="-1.0" text="Delete" />


              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
